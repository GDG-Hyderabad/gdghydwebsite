{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "./build",
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "**/*",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}